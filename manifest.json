{
  "manifest_version": 3,
  "name": "Discord Chat Exporter",
  "version": "5.0.0",
  "description": "Export Discord chat messages from channels to CSV files using Discord's API. Features date range selection, progress tracking, and enhanced message data including embeds and reactions.",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "https://discord.com/*",
    "https://discordapp.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Export Discord Chat",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  
  "author": "Your Name",
  
  "homepage_url": "https://github.com/yourusername/discord-chat-exporter"
}